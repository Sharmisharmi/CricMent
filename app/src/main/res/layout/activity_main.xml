<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/menu"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                app:tint="@color/black"
                android:onClick="openCloseNavigationDrawer"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/transparent_logo"
                app:tint="@color/black" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/profile_t"
                android:tint="@color/black"
                app:civ_border_color="#AFAEAE"
                app:civ_border_width="2dp" />

        </RelativeLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fragment_container"
            android:layout_above="@+id/bottom_menu"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"/>

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/primary"
            android:elevation="25dp"
            android:padding="8dp"
            app:cnb_addBottomInset="true"
            app:cnb_addLeftInset="true"
            app:cnb_addRightInset="true"
            app:cnb_menuResource="@menu/bottom_menu"
            app:cnb_orientationMode="horizontal"
            android:layout_alignParentBottom="true"
            app:cnb_unselectedColor="@color/white"
            app:cnb_badgeColor="@color/white"
            app:cnb_textAppearance="@style/myThemeTextAppearance" />

    </RelativeLayout>


