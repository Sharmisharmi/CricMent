<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.arindicatorview.ARIndicatorView
        android:id="@+id/ar_indicator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:indicator_size="75"
        app:number_of_indicators="5"
        app:indicator_color="@color/colorthree"
        app:selected_color="@color/primary"
        app:indicator_animation="@anim/zoom_in"
        app:indicator_shape="@drawable/line"
        android:paddingHorizontal="15dp"
        app:indicator_scrubbing="true"
        app:animate_indicator_scrubbing="true"
        />

<!--    <com.kingfisher.easyviewindicator.RecyclerViewIndicator-->
<!--        android:id="@+id/recyclerViewIndicator"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="20dp"-->
<!--        app:avi_animation_enable="true"-->
<!--        app:avi_drawable="@drawable/round_corner"-->
<!--        app:avi_drawable_unselected="@drawable/gradient_banner"-->
<!--        app:avi_height="10dp"-->
<!--        app:avi_margin="10dp"-->
<!--        app:avi_width="10dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/recycler">-->

<!--    </com.kingfisher.easyviewindicator.RecyclerViewIndicator>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="15dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/gradient_banner">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round_corner"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/circle"
                            app:tint="@color/red"
                            android:layout_gravity="center_vertical"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Live"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="8dp"
                            android:layout_marginLeft="3dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Asia Cup 2023"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="10dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/india_flag"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="India"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textSize="16dp"/>
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/cricket_bat"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="365/5 "
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="11dp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="44.5 "
                            android:fontFamily="@font/poppins_light"
                            android:textSize="9dp"
                            android:textColor="@color/yellow" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/thunder" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pakistan"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/india_flag"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yet to bat"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="11dp"
                            android:textColor="#F44336"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India choose to bat"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest News"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="15dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/latest_news_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>