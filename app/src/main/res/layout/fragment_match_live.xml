<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:background="@drawable/border_bg"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Target : 365"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="11dp"
                android:layout_gravity="end"
                android:background="@drawable/bottom_left"
                android:paddingHorizontal="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/team1Img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/india_flag"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">


                        <TextView
                            android:id="@+id/team1Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IND"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/pencil_black"
                            android:textSize="15dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp"
                                >

                                <TextView
                                    android:id="@+id/team1score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="365-5 "
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="16dp"
                                    android:textColor="#02635A"
                                    />
                                <TextView
                                    android:id="@+id/team1over"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(44.5) "
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="10dp"
                                    android:textColor="@color/red" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pencil_black"
                    android:text="vs"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/colorthree"
                    android:paddingHorizontal="5dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="end"
                            android:gravity="end">


                            <TextView
                                android:id="@+id/team2Txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IND"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/pencil_black"
                                android:textSize="15dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp"
                                >

                                <TextView
                                    android:id="@+id/team2score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="365-5 "
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="16dp"
                                    android:textColor="#02635A"
                                    />
                                <TextView
                                    android:id="@+id/team2over"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(44.5) "
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="10dp"
                                    android:textColor="@color/red" />
                            </LinearLayout>

                        </LinearLayout>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/team2Img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/india_flag"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/crr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pencil_black"
                    android:text="CRR: 5.89"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/rrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pencil_black"
                    android:text="RRR : 4.12"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12dp"
                    android:layout_toEndOf="@id/crr"
                   android:layout_marginLeft="15dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/countryTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pak needs "
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/needRunTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="14dp"
                        android:textColor="@color/red" />
                    <TextView
                        android:id="@+id/runsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" runs in "
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/ballsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="14dp"
                        android:textColor="@color/default_bg" />
                    <TextView
                        android:id="@+id/ballOrRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" balls"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10dp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/overLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp"/>

    </HorizontalScrollView>







    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:background="@color/colorthree"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Batter"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="R(B)"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="4s"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="6s"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="SR"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"
            android:gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/batter_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:background="@color/colorthree"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Bowler"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="W-R"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Overs"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Economy"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"
            android:gravity="end"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bowler_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>