<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/finishedCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team1Img"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:src="@drawable/india_flag"/>

                    <TextView
                        android:id="@+id/team1finished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IND"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/team1score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="365-5 "
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11dp"
                            android:textColor="@color/pencil_black"
                            />
                        <TextView
                            android:id="@+id/team1over"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="44.5 "
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="9dp"
                            android:textColor="@color/red" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team2mg"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:src="@drawable/india_flag"/>

                    <TextView
                        android:id="@+id/team2finished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAK"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/team2score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="165-5 "
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="11dp"
                            android:textColor="@color/pencil_black"
                            />
                        <TextView
                            android:id="@+id/team2over"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24.5 "
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="9dp"
                            android:textColor="@color/red" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@color/light_black"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/countryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India won"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"
                    android:textColor="@color/primary"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/byRunsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" by 5 wickets "
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>